{% set block_main_field = "files" %}
{% set block_extras = {} %}
{% extends "blocks/_block-container.twig" %}

{% block block_content %}

    {% set files = fields.files %}
    {% if fields.show_date and fields.seperate_by_year %}
        {% set files = function("seperate_by_year", files) %}
        {% for key, file in files %}     
            {% include "blocks/file/file.twig" with { files : file, title : key, show_date : fields.show_date  } %}
        {% endfor %}
    {% else %}
        {% include "blocks/file/file.twig" with { files : files, title : fields.title, show_date : fields.show_date } %}
    {% endif %}

{% endblock %}