

<form id="lostPasswordForm" class="form form-validate" autocomplete="off" data-ajax-method="password_recover">
	<div class="modal-header">
		<h5 class="modal-title">Lost Password</h5>
		<button type="button" class="bootbox-close-button close btn-close" aria-hidden="true" aria-label="Close"></button>
	</div>
	<div class="modal-body">
		<div class="message"></div>
		<div class="form-group">
			<label class="form-label">Email Address</label>
			<input class="form-control" type="email" name="user_login" placeholder="Email Address" required/>
		</div>
	</div>
	<div class="modal-footer justify-content-center py-3">
		<button type="submit" class="btn-submit btn btn-primary btn-extended">Send</button>
	</div>
</form>