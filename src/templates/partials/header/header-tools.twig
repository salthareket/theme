<div class="{{header_options[position].class}}">
    <div class="navbar header-tools header-tools-{{position}} py-0 justify-content-{{position}}" role="navigation" aria-label="Header Tools">
        <div class="nav-user nav flex-nowrap flex-row">
        {% for item in header_tools %}
            {{include(
                "partials/base/menu-" ~ item.menu_item ~ ".twig", 
                {
                    menu_type    : item.menu_type,
                    menu_view    : item.menu_view,
                    menu_class   : item.menu_class,
                    menu_custom  : item.menu_custom,
                    menu_buttons : item.menu_buttons,
                    menu_nav     : item.menu_nav,
                    menu_image   : item.menu_image,
                    menu_link    : item.menu_link
                },
                ignore_missing = true
            )}}
        {% endfor %} 
        </div>
    </div>
</div>