{% if brand %}
        <div class="hero-brand bg-cover" style="background-image:url({{brand.bg}});">
             <div class="container">
                  <a href="{{brand.url}}" title="{{brand.title}}">
                    <img src="{{brand.image}}" class="img-responsive-center" alt="{{brand.title}}" itemprop="image"/>
                    <h2>{{brand.title}}</h2>
                  </a>
             </div>
        </div>
{% endif %}