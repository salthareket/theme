{% if enable_notifications %}
    {% if menu_type == "dropdown" %}
       {% set toggle = "dropdown" %}
       {% set class =  menu_class ~ " dropdown dropdown-notifications dropdown-form" %}
       {% set target = "" %}
    {% else %}
       {% set toggle = "offcanvas" %}
       {% set class = menu_class ~ "" %}
       {% set target = "offcanvasNotifications" %}
    {% endif %}

    <li class="nav-item {{class}}" data-type="notifications">

        <a href="#{{target}}" role="button" data-bs-toggle="{{toggle}}" aria-controls="{{target}}">
            {% if user.notifications_count > 0 %}
                <div class="notification-count">{{user.notifications_count}}</div>
            {% endif %}
            <i class="fa-light fa-bell"></i>
        </a>

        {% if menu_type == "dropdown" %}
            <div class="dropdown-menu">
                <div class="dropdown-header">
                    <div class="title">{{'BİLDİRİMLER'|trans}}</div>
                    <div class="action">
                        <a href="#" data-dismiss="dropdown">{{'Kapat'|trans}}</a>
                    </div>
                </div>
                <div class="dropdown-container load-container">
                    <div class="dropdown-body scrollable">
                        <div class="content">
                            <div class="content-block">
                                <i class="fa-light fa-bell"></i>
                                {{'Yeni bildiriminiz yok.'|trans}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        
    </li>
{% endif %}