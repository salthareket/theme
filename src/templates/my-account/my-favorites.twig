

{% set  page_settings = {
            full : false,
            classes : {
                body : "",
                main : "",
                container : "",
                gap : "",
            },
            offcanvas : {
                individual : false,
                size : "md",
                width : 3,
                position : "start",
                template : ""
            },
            alert : {
                type : "danger",
                title : "",
                message : "",
                position : "bottom",
                fixed : false,
                class : "",
                html : ""
            },
            paging : {
                posts_per_page : 10,
                page : 1
            }
        }
%}


{% block hero %}
{% endblock %}


{% block sidebar %}
{% endblock %}


{% block content %}
    <div class="card-container card-container-solid card card-reset ajax-paginate" data-post_type="product" data-posts_per_page="10" data-order="desc" data-load="scroll" data-tease="woo/tease-product" data-size="xs" data-action="get" data-ajax-method="favorites">
        <div class="card-header">
            <h1 class="card-title">
                {{title}}
                {% if description %}
                <small>{{description}}</small>
                {% endif %}
            </h1>
        </div>
        <div class="card-body list-cards pt-4 pb-2"></div>
        <div class="card-footer justify-content-end viewport">
            <a href="#" class="btn-next-page btn btn-light btn-extend w-100 loading" data-init="true"><span>Load <span class="item-left"></span> More</span></a>
        </div>
    </div>
{% endblock %}


{% block appendix %}
    {{'<script>'}}
        $( document ).ready(function() {
            {% if not page_settings.paging %}
            $("#form-search").find("[type='submit']").on("click", function(){
                $(".list-cards").empty();
            });
            $("#form-search").submit();
            {% endif %}
        });
    {{'</script>'}}
{% endblock %}