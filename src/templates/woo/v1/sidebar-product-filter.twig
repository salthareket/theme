                                    {% set counter = 0 %}
                                    {% for item in category_price_set if item.active %}
                                        {% set counter = counter + 1 %}
                                    {% endfor %}
                                    <a href="#" data-bs-toggle="collapse" data-target="#priceOptions" aria-expanded="true" aria-controls="priceOptions">
                                       {{'FİYAT'|trans}} <span class="count">{% if counter > 0 %}({{counter}}){% endif %}</span>
                                    </a>
                                </h5>
                                <div class="action"></div>
                            </div>
                            <div id="priceOptions" class="product-filter-item-collapse collapse" aria-labelledby="priceOptionsHeader" data-parent="#product-filters">
                                <div class="product-filter-item-body card-body">
                                    <div class="price-range">
                                        <div class="input-group">
                                            {% set min_price = "" %}
                                            {% set max_price = "" %}
                                            {% if query_vars %}
                                                {% for query_var in query_vars if query_var.slug == "fiyat_araligi" %}
                                                    {% set fiyat_araligi = function('explode', '|', query_var.terms[0] ) %}
                                                    {% set min_price = fiyat_araligi[0] %}
                                                    {% set max_price = fiyat_araligi[1] %}
                                                {% endfor %}
                                            {% endif %}
                                            <input type="text" class="form-control" name="fiyat_min" placeholder="Min." aria-label="Min." aria-describedby="price-filter" value="{{min_price}}">
                                            <input type="text" class="form-control" name="fiyat_max" placeholder="Max." aria-label="Max." aria-describedby="price-filter" value="{{max_price}}">
                                            <div class="input-group-append">
                                                <a href="#" class="btn btn-primary" type="button" id="price-filter"><i class="icon-search"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                    {% if category_price_set %}
                                    <ul class="list-group-options list-group">
                                        {% for item in category_price_set %}
