<div class="product-filters card-collapse card-merged update-me init" id="product-filters">

                        {% if product_categories %}
                            <div class="product-filter-item card">
                                <div class="card-header show-arrow no-border" id="categoryOptionsHeader">
                                    <h5 class="title">
                                        {% set counter = 0 %}
                                        {% for item in product_categories if item.active %}
                                            {% set counter = counter + 1 %}
                                        {% endfor %}
                                        <a href="#" data-bs-toggle="collapse" data-target="#categoryOptions" aria-expanded="false" aria-controls="categoryOptions">
                                           {{'Kategoriler'|trans}} <span class="count">{% if counter > 0 %}({{counter}}){% endif %}</span>
                                        </a>
                                    </h5>
                                    <div class="action"></div>
                                </div>
                                <div id="categoryOptions" class="product-filter-item-collapse collapse" aria-labelledby="categoryOptionsHeader" data-parent="#product-filters">
                                    <div class="product-filter-item-body card-body">
                                        <ul class="list-group-options list-group">
                                            {% for item in product_categories %}
                                            <li class="list-group-item">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" id="kategori-{{item.term_id}}" name="kategori" class="custom-control-input" value="{{item.slug}}" {% if item.active %}checked{% endif %}>
                                                    <label class="custom-control-label" for="kategori-{{item.term_id}}"> {{item.name}}</label>
                                                </div>
                                            </li>
                                            {% endfor %}
                                            <li class="list-group-item remove-choices {% if counter == 0 %}d-none{% endif %}">
                                                <a href="#" data-term="kategori">{{'Seçimi Temizle'|trans}}</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

